<div class="row">
  <div class="col-4">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-4">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="name" placeholder="Burger Name">
  </div>
  <button type="submit" class="submit">Submit</button>
</form>
</div>
<div class="col-4">
<ul>
  {{#each burgers}}
    {{#if devoured}}
       {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</div>